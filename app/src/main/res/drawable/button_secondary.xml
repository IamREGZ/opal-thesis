<?xml version="1.0" encoding="utf-8"?>
<!--  Secondary Button Drawable  -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Enabled Button (Green Outlined Button)  -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/button_stroke" android:color="@color/primaryAccentColor" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>

    <!--  Disabled Button (Dark Gray Outlined Button)  -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/button_stroke" android:color="@color/dim_gray" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
</selector>