<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Focused EditText  -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/et_sign_in_radius" />
            <stroke android:color="@color/app_white" android:width="@dimen/et_stroke_width" />
        </shape>
    </item>

    <!--  Unfocused EditText  -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/et_sign_in_radius" />
            <stroke android:color="@color/et_hint_black" android:width="@dimen/et_stroke_width" />
        </shape>
    </item>
</selector>