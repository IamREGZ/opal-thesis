<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_product"
    android:layout_width="@dimen/card_size"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_mrg_pd"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/app_white"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product_home_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_size"
            android:background="@color/white"
            android:contentDescription="@string/product_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_product_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/medium_mrg_pd"
            android:paddingTop="@dimen/small_mrg_pd"
            android:paddingEnd="@dimen/medium_mrg_pd"
            android:paddingBottom="@dimen/small_mrg_pd">

            <edu.cccdci.opal.utils.HeaderTextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_mrg_pd"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/product_name"
                android:textColor="@color/primaryAccentColor"
                android:textSize="@dimen/card_head_text_size" />

            <edu.cccdci.opal.utils.HeaderTextView
                android:id="@+id/tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_mrg_pd"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/product_price"
                android:textColor="@color/secondaryAccentColor"
                android:textSize="@dimen/card_desc_text_size" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

