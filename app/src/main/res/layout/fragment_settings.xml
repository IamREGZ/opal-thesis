<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical"
    tools:context=".ui.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/medium_large_mrg_pd"
        android:orientation="vertical">

        <edu.cccdci.opal.utils.HeaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_mrg_pd"
            android:layout_marginEnd="@dimen/medium_large_mrg_pd"
            android:layout_marginBottom="@dimen/medium_mrg_pd"
            android:text="@string/app_settings_head"
            android:textColor="@color/app_black"
            android:textSize="@dimen/main_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

        <LinearLayout
            android:id="@+id/ll_notification"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/medium_large_mrg_pd"
            android:paddingEnd="@dimen/medium_large_mrg_pd">

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notification_settings"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <View
                android:layout_width="@dimen/ic_forward_size"
                android:layout_height="@dimen/ic_forward_size"
                android:layout_marginStart="@dimen/medium_large_mrg_pd"
                android:background="@drawable/ic_forward" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/medium_large_mrg_pd"
            android:paddingEnd="@dimen/medium_large_mrg_pd">

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/location_settings"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <View
                android:layout_width="@dimen/ic_forward_size"
                android:layout_height="@dimen/ic_forward_size"
                android:layout_marginStart="@dimen/medium_large_mrg_pd"
                android:background="@drawable/ic_forward" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

        <edu.cccdci.opal.utils.HeaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_mrg_pd"
            android:layout_marginTop="@dimen/medium_large_mrg_pd"
            android:layout_marginEnd="@dimen/medium_large_mrg_pd"
            android:layout_marginBottom="@dimen/medium_mrg_pd"
            android:text="@string/account_settings_head"
            android:textColor="@color/app_black"
            android:textSize="@dimen/main_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

        <LinearLayout
            android:id="@+id/ll_change_pass"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/medium_large_mrg_pd"
            android:paddingEnd="@dimen/medium_large_mrg_pd">

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <View
                android:layout_width="@dimen/ic_forward_size"
                android:layout_height="@dimen/ic_forward_size"
                android:layout_marginStart="@dimen/medium_large_mrg_pd"
                android:background="@drawable/ic_forward" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

        <LinearLayout
            android:id="@+id/ll_delete_acc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/medium_large_mrg_pd"
            android:paddingEnd="@dimen/medium_large_mrg_pd">

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_account"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <View
                android:layout_width="@dimen/ic_forward_size"
                android:layout_height="@dimen/ic_forward_size"
                android:layout_marginStart="@dimen/medium_large_mrg_pd"
                android:background="@drawable/ic_forward" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_line_width"
            android:background="@color/et_hint_black" />

    </LinearLayout>

    <edu.cccdci.opal.utils.MainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_margin="@dimen/medium_large_mrg_pd"
        android:text="@string/app_version"
        android:textColor="@color/app_black"
        android:textSize="@dimen/main_text_size" />

</LinearLayout>