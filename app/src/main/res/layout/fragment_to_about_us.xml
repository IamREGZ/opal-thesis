<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".to_about_us">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/register_layout_padding"
        android:paddingEnd="@dimen/register_layout_padding">


    <ImageView
            android:id="@+id/iv_register_logo"
            android:layout_width="@dimen/opal_small_logo_size"
            android:layout_height="@dimen/opal_small_logo_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/opal_logo_rounded" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="WHAT is O-PAL"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Lorem Ipsum is simply dummy text of the printing
                and typesetting industry. papasa ba?"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>