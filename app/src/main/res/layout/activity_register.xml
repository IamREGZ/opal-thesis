<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/register_layout_padding"
    android:paddingEnd="@dimen/register_layout_padding"
    tools:context=".activities.RegisterActivity">

    <edu.cccdci.opal.utils.PrimaryButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/register_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/login_button_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:orientation="horizontal">

        <edu.cccdci.opal.utils.PrimaryTextView
            android:id="@+id/tv_with_account_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/with_account_lbl"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_size" />

        <edu.cccdci.opal.utils.PrimaryTextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin_link"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

</LinearLayout>