<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/back_icon"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/add"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>



        </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Default Address"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:paddingBottom="10dp"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:text="Address 1"
                android:textSize="30dp"/>

        </RelativeLayout>



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="60dp">


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:text="Address 2"
                android:textSize="30dp"/>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:text="Home Address"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingBottom="10dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:text="Home Address 1"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="horizontal">

            <edu.cccdci.opal.utils.MainButton
                android:id="@+id/address_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_weight="1"
                android:background="#3C813D"
                android:text="confirm"
                android:textColor="@color/app_white"
                android:textSize="@dimen/register_buttons_text_size" />

            <edu.cccdci.opal.utils.MainButton
                android:id="@+id/address_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_weight="1"
                android:background="#3C813D"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/cancel_btn"
                android:textColor="@color/app_white"
                android:textSize="@dimen/register_buttons_text_size" />

        </LinearLayout>
        <edu.cccdci.opal.utils.MainButton
            android:id="@+id/address_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#3C813D"
            android:foreground="?attr/selectableItemBackground"
            android:text="Delete"
            android:textColor="@color/app_white"
            android:textSize="@dimen/register_buttons_text_size" />




    </LinearLayout>




</FrameLayout>
