<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/login_layout_padding"
    android:paddingEnd="@dimen/login_layout_padding"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/opal_logo_size"
        android:layout_height="@dimen/opal_logo_size"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/opal_logo_transparent"
        app:tint="@color/app_white" />

    <edu.cccdci.opal.utils.MainEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="@dimen/login_icon_padding"
        android:ems="10"
        android:hint="@string/login_username_hint"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/login_edittext_padding"
        android:paddingEnd="@dimen/login_edittext_padding"
        android:textColor="@color/app_white"
        android:textColorHint="@color/et_hint_white"
        android:textSize="@dimen/main_text_size" />

    <edu.cccdci.opal.utils.MainEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:layout_marginTop="@dimen/medium_large_margin"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="@dimen/login_icon_padding"
        android:ems="10"
        android:hint="@string/login_password_hint"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="@dimen/login_edittext_padding"
        android:paddingEnd="@dimen/login_edittext_padding"
        android:textColor="@color/app_white"
        android:textColorHint="@color/et_hint_white"
        android:textSize="@dimen/main_text_size" />

    <edu.cccdci.opal.utils.MainTextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/medium_margin"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/forgot_password"
        android:textColor="@color/app_white"
        android:textSize="@dimen/main_text_size" />

    <edu.cccdci.opal.utils.MainButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_marginTop="@dimen/xl_margin"
        android:background="@drawable/custom_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/sign_in_btn"
        android:textColor="@color/app_white"
        android:textSize="@dimen/login_button_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:orientation="horizontal">

        <edu.cccdci.opal.utils.MainTextView
            android:id="@+id/tv_no_account_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/no_account_lbl"
            android:textColor="@color/app_white"
            android:textSize="@dimen/main_text_size" />

        <edu.cccdci.opal.utils.MainTextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/register_link"
            android:textColor="@color/app_white"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

</LinearLayout>