<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_profile_page"
        android:layout_width="@dimen/opal_profile_logo_size"
        android:layout_height="@dimen/opal_profile_logo_size"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:contentDescription="@string/app_name"
        android:src="@drawable/opal_logo_sign_up" />

    <edu.cccdci.opal.utils.HeaderTextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/profile_name"
        android:textColor="@color/app_black"
        android:textSize="@dimen/header_text_size" />

    <edu.cccdci.opal.utils.MainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:text="@string/profile_username"
        android:textColor="@color/app_black"
        android:textSize="@dimen/main_text_size" />

</LinearLayout>