<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/progress_dialog_padding">

    <ProgressBar
        android:id="@+id/pb_spinner"
        android:layout_width="@dimen/progress_spinner_size"
        android:layout_height="@dimen/progress_spinner_size"
        android:progressTint="@color/primaryAccentColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_progress_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <edu.cccdci.opal.utils.MainTextView
        android:id="@+id/tv_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_mrg_pd"
        android:text="@string/msg_please_wait"
        android:textColor="@color/app_black"
        android:textSize="@dimen/progress_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pb_spinner"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>