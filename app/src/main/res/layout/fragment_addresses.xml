<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/large_mrg_pd"
    android:paddingTop="@dimen/large_mrg_pd"
    android:paddingEnd="@dimen/large_mrg_pd"
    tools:context=".ui.fragments.AddressesFragment">

    <edu.cccdci.opal.utils.HeaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_mrg_pd"
        android:text="Default Address"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text_size" />

    <edu.cccdci.opal.utils.MainCheckBox
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingStart="@dimen/medium_mrg_pd"
        android:paddingEnd="@dimen/medium_mrg_pd"
        android:text="Address 1"
        android:textSize="@dimen/header_text_size" />

    <edu.cccdci.opal.utils.MainCheckBox
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingStart="@dimen/medium_mrg_pd"
        android:paddingEnd="@dimen/medium_mrg_pd"
        android:text="Address 2"
        android:textSize="@dimen/header_text_size" />

    <edu.cccdci.opal.utils.HeaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_mrg_pd"
        android:layout_marginBottom="@dimen/medium_mrg_pd"
        android:text="Home Address"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text_size" />

    <edu.cccdci.opal.utils.MainCheckBox
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingStart="@dimen/medium_mrg_pd"
        android:paddingEnd="@dimen/medium_mrg_pd"
        android:text="Home Address 1"
        android:textSize="@dimen/header_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:paddingBottom="@dimen/xl_mrg_pd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <edu.cccdci.opal.utils.MainButton
                android:id="@+id/address_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/small_mrg_pd"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="confirm"
                android:textColor="@color/app_white"
                android:textSize="@dimen/register_buttons_text_size" />

            <edu.cccdci.opal.utils.MainButton
                android:id="@+id/address_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/small_mrg_pd"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="@string/cancel_btn"
                android:textColor="@color/app_white"
                android:textSize="@dimen/register_buttons_text_size" />

        </LinearLayout>

        <edu.cccdci.opal.utils.MainButton
            android:id="@+id/address_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:text="Delete"
            android:textColor="@color/app_white"
            android:textSize="@dimen/register_buttons_text_size" />

    </LinearLayout>


</LinearLayout>
