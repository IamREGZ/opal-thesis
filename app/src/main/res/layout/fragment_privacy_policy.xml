<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.PrivacyPolicyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColorTheme"
            android:paddingTop="@dimen/large_mrg_pd"
            android:paddingBottom="@dimen/large_mrg_pd">

            <ImageView
                android:layout_width="@dimen/opal_logo_size"
                android:layout_height="@dimen/opal_logo_size"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/opal_logo_transparent"
                app:tint="@color/app_white" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/medium_large_mrg_pd"
            android:paddingTop="@dimen/large_mrg_pd"
            android:paddingEnd="@dimen/medium_large_mrg_pd"
            android:paddingBottom="@dimen/xl_mrg_pd">

            <edu.cccdci.opal.utils.HeaderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_large_mrg_pd"
                android:gravity="center"
                android:text="@string/pp_head_1"
                android:textColor="@color/app_black"
                android:textSize="@dimen/header_text_size" />

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_mrg_pd"
                android:gravity="center"
                android:text="@string/pp_paragraph_1"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <edu.cccdci.opal.utils.HeaderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/medium_large_mrg_pd"
                android:text="@string/pp_head_2"
                android:textColor="@color/app_black"
                android:textSize="@dimen/header_text_size" />

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_mrg_pd"
                android:gravity="center"
                android:text="@string/pp_paragraph_2"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <edu.cccdci.opal.utils.HeaderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/medium_large_mrg_pd"
                android:text="@string/pp_head_3"
                android:textColor="@color/app_black"
                android:textSize="@dimen/header_text_size" />

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_mrg_pd"
                android:gravity="center"
                android:text="@string/pp_paragraph_3"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

            <edu.cccdci.opal.utils.HeaderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/medium_large_mrg_pd"
                android:text="@string/pp_head_4"
                android:textColor="@color/app_black"
                android:textSize="@dimen/header_text_size" />

            <edu.cccdci.opal.utils.MainTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pp_paragraph_4"
                android:textColor="@color/app_black"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>